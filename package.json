{
	"name": "@gameblog/root",
	"version": "1.0.0",
	"private": true,
	"workspaces": {
		"packages": [
			"client",
			"server"
		]
	},
	"devDependencies": {
		"husky": "^9.0.11",
		"npm-run-all": "^4.1.5"
	},
	"scripts": {
		"dev:client": "yarn workspace @gameblog/client dev",
		"dev:server": "yarn workspace @gameblog/server start:dev",
		"dev:start": "npm-run-all --parallel dev:server dev:client",
		"prepare": "husky"
	}
}
