{
  "name": "gameblog-web",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "next-lint": "next lint",
    "prettier": "prettier \"./**/*.{ts,tsx,json,js,mjs,md,scss,css}\" --cache --write",
    "stylelint-fix": "stylelint \"./src/**/*.{scss,css}\" --cache --fix --config @gameblog/stylelint-config",
    "lint": "pnpm run next-lint && pnpm run stylelint-fix",
    "format": "pnpm run prettier && pnpm run stylelint-fix"
  },
  "prettier": "@gameblog/prettier-config/withTailwind",
  "lint-staged": {
    "./*.{ts,json,js,mjs,md}": "pnpm run prettier",
    "./src/**/*.{ts,tsx,json,js,mjs,md}": [
      "pnpm run prettier",
      "pnpm run next-lint"
    ],
    "./public/**/*.{json,md}": "pnpm run prettier",
    "./src/**/*.{scss,css}": [
      "pnpm run prettier",
      "pnpm run stylelint-fix"
    ]
  },
  "dependencies": {
    "@gsap/react": "^2.1.1",
    "@nextui-org/react": "^2.4.2",
    "@tanstack/react-query": "^5.50.1",
    "framer-motion": "^11.2.13",
    "gsap": "^3.12.5",
    "lucide-react": "^0.408.0",
    "modern-normalize": "^2.0.0",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18",
    "sass": "^1.77.6",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@feature-sliced/eslint-plugin-messages": "0.1.0-beta.2",
    "@gameblog/eslint-config": "workspace:*",
    "@gameblog/prettier-config": "workspace:*",
    "@gameblog/stylelint-config": "workspace:*",
    "@gameblog/tailwind-config": "workspace:*",
    "@gameblog/typescript-config": "workspace:*",
    "@gameblog/ui": "workspace:*",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "clsx": "^2.1.1",
    "eslint": "^8",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "stylelint": "^16.6.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
