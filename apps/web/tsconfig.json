{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@gameblog/typescript-config/Next",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@pages/*": ["./src/pages/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@features/*": ["./src/features/*"],
      "@entities/*": ["./src/entities/*"],
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts", "@gameblog/ui"]
}
