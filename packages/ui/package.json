{
  "name": "@gameblog/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tailwindcss -i ./src/styles/index.scss -o ./dist/index.css",
    "dev": "tailwindcss -i ./src/styles/index.scss -o ./dist/index.css --watch",
    "type-check": "tsc --noEmit",
    "eslint": "eslint src/ --fix",
    "prettier": "prettier \"./**/*.{ts,tsx,json,js,scss,css}\" --write --cache",
    "stylelint-fix": "stylelint \"./src/**/*.{scss,css}\" --config @gameblog/stylelint-config --fix --cache",
    "lint": "pnpm run eslint && pnpm run stylelint-fix",
    "format": "pnpm run prettier && pnpm run stylelint-fix"
  },
  "prettier": "@gameblog/prettier-config/withTailwind",
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@gameblog/eslint-config": "workspace:*",
    "@gameblog/prettier-config": "workspace:*",
    "@gameblog/stylelint-config": "workspace:*",
    "@gameblog/tailwind-config": "workspace:*",
    "@gameblog/typescript-config": "workspace:*",
    "@types/react": "^18.2.61",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "stylelint": "^16.6.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@nextui-org/react": "^2.4.2",
    "framer-motion": "^11.2.13"
  },
  "lint-staged": {
    "./*.{ts,tsx,json,js}": "pnpm run prettier",
    "./src/**/*.{ts,tsx,json,js}": [
      "pnpm run prettier",
      "pnpm run eslint"
    ],
    "./src/**/*.{scss,css}": [
      "pnpm run prettier",
      "pnpm run stylelint-fix"
    ]
  }
}
